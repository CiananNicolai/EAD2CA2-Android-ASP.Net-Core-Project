<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_name"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_name"
        android:padding="16dp"
        android:textSize="20sp"
        android:layout_below="@id/title_textview" />

    <EditText
        android:id="@+id/edit_text_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_review_description"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_below="@id/edit_text_author" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:layout_below="@id/edit_text_body"
        android:contentDescription="@string/rating_bar_content_description" />


    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:text="@string/submit_review" />

</RelativeLayout>
